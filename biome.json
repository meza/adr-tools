{
  "extends": ["@meza/biome"],
  "files": {
    "includes": [
      "**/*.ts",
      "**/*.css",
      "**/*.tsx",
      "**/*.json",
      "!**/*.snap",
      "!**/node_modules",
      "!**/dist",
      "!reports/**"
    ]
  },
  "linter": {
    "rules": {
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "level": "error",
          "options": {
            "maxAllowedComplexity": 10
          }
        }
      }
    }
  }
}
