{
  "name": "@meza/adr-tools",
  "version": "1.0.10",
  "exports": {
    ".": {
      "import": {
        "types": "dist/types/index.d.ts",
        "default": "dist/index.js"
      }
    }
  },
  "bin": {
    "adr": "dist/index.js"
  },
  "license": "GPL-3.0",
  "type": "module",
  "types": "dist/index.d.ts",
  "private": false,
  "scripts": {
    "prebuild": "./scripts/inject-version.sh ./src/version.ts",
    "prepack": "./scripts/inject-version.sh ./src/version.ts && tsc && yarn copy ",
    "copy": "copyfiles -u 1 ./src/templates/** ./dist",
    "build": "tsc && yarn copy",
    "start": "ts-node src/index.ts",
    "commit": "cz",
    "ci": "npm set editor 'true' && npm-run-all --parallel lint test",
    "ci:dev": "exit 0",
    "clean": "rimraf dist .cache/tsbuildinfo",
    "clean:all": "yarn clean && rm -rf node_modules .cache",
    "lint:ci": "biome ci --reporter=github",
    "lint:tsc": "tsc --noEmit",
    "lint": "npm-run-all --parallel lint:*",
    "test": "npm-run-all --parallel test:*",
    "test:unit": "vitest",
    "test:e2e": "vitest --config vitest.config.e2e.ts",
    "prepare": "is-ci || husky install",
    "report": "exit 0",
    "semantic-release": "semantic-release",
    "release": "semantic-release"
  },
  "dependencies": {
    "@types/inquirer": "9.0.7",
    "@types/node": "22.5.4",
    "chalk": "5.3.0",
    "commander": "12.1.0",
    "core-js": "3.38.1",
    "inquirer": "9.3.6",
    "marked": "4.3.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "post-merge": "install-deps-postmerge",
      "pre-push": "yarn ci",
      "pre-commit": "yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@commitlint/prompt-cli": "19.5.0",
    "@faker-js/faker": "9.0.0",
    "@meza/adr-tools": "1.0.10",
    "@meza/tsconfig-base": "1.1.0",
    "@ryansonshine/commitizen": "4.2.8",
    "@ryansonshine/cz-conventional-changelog": "3.3.4",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.0",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "10.3.3",
    "@semantic-release/npm": "12.0.1",
    "@semantic-release/release-notes-generator": "14.0.1",
    "@types/uuid": "10.0.0",
    "@vitest/ui": "2.0.5",
    "copyfiles": "2.4.1",
    "cross-env": "7.0.3",
    "husky": "9.1.5",
    "install-deps-postmerge": "2.0.1",
    "is-ci": "3.0.1",
    "lint-staged": "15.2.10",
    "mock-cwd": "1.0.0",
    "npm-run-all2": "6.2.2",
    "rimraf": "6.0.1",
    "semantic-release": "24.1.1",
    "ts-node": "10.9.2",
    "tsx": "4.19.1",
    "typescript": "5.5.4",
    "uuid": "10.0.0",
    "vitest": "2.0.5",
    "yarn": "1.22.22"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/meza/adr-tools.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --files-ignore-unknown=true",
      "biome check --write --no-errors-on-unmatched",
      "biome check --write --organize-imports-enabled=false --no-errors-on-unmatched",
      "biome check --write --unsafe --no-errors-on-unmatched",
      "biome format --write --no-errors-on-unmatched",
      "biome lint --write --no-errors-on-unmatched"
    ]
  }
}
